<?xml version="1.0" encoding="utf-8"?>
<TableLayout 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    android:stretchColumns="1"> 

    <TableRow
        android:id="@+id/list_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/iconblock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
	        <ImageView
	            android:id="@+id/icon"
	            android:layout_width="54dp"
	            android:layout_height="fill_parent"
	            android:layout_marginRight="6dip"
	            android:paddingLeft="6dip"
	            android:contentDescription="@string/icon_menu_desc"
	            android:scaleType="center"
	            android:src="@drawable/ic_menuicon"
	        />

	        <RelativeLayout
	            android:id="@+id/ratingblock"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:paddingBottom="6dp">

	            <LinearLayout
	                android:id="@+id/ratings"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:orientation="vertical"
	                android:paddingLeft="12dp" >

	                <ImageView
	                    android:id="@+id/icon_star"
	                    android:layout_width="18dp"
	                    android:layout_height="18dp"
	                    android:layout_marginRight="0dp"
	                    android:contentDescription="@string/icon_menu_desc"
	                    android:gravity="top"
	                    android:paddingLeft="0dp"
	                    android:scaleType="fitXY"
	                    android:src="@drawable/ic_star" />

	                <TextView
	                    android:id="@+id/rating"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_centerVertical="true"
	                    android:layout_toRightOf="@+id/icon_star"
	                    android:gravity="center_horizontal"
	                    android:paddingBottom="0dp"
	                    android:textColor="@color/unibe_black"
	                    android:textSize="12sp" />
	            </LinearLayout>

	            <LinearLayout
	                android:id="@+id/votes"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                android:layout_alignParentTop="true"
	                android:orientation="vertical"
	                android:paddingRight="9dp" >

	                <ImageView
	                    android:id="@+id/icon_user"
	                    android:layout_width="18dp"
	                    android:layout_height="18dp"
	                    android:layout_marginRight="0dp"
	                    android:contentDescription="@string/icon_menu_desc"
	                    android:gravity="top"
	                    android:paddingLeft="0dp"
	                    android:scaleType="fitXY"
	                    android:src="@drawable/ic_friendicon" />

	                <TextView
	                    android:id="@+id/count"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:gravity="center_horizontal"
	                    android:text="13"
	                    android:paddingBottom="0dp"
	                    android:textColor="@color/unibe_black"
	                    android:textSize="12sp" />
	            </LinearLayout>
	        </RelativeLayout>

	   </LinearLayout>

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="6dip"
            android:paddingRight="10dip"
            android:paddingLeft="3dip">
	        
            <TextView
                android:id="@+id/mensa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="Mensaname"
                android:textColor="@color/unibe_red"
                android:textSize="16sp"
            />

            <RelativeLayout
                android:id="@+id/title_wrapper"
                android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:paddingRight="3dip">
            	
	            <TextView
	                android:id="@+id/title"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:gravity="center_vertical"
	                android:text="Titel des Menus"
	                android:textColor="@color/unibe_black"
	                android:textSize="16sp" />
	            
	            <TextView
	                android:id="@+id/date"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignRight="@id/title"
	                android:layout_centerVertical="true"
	                android:ellipsize="marquee"
	                android:singleLine="true"
	                android:text="Tag und Datum"
	                android:textColor="@color/unibe_gray_dark"
	                android:textSize="13sp" />

	        </RelativeLayout>

            <TextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:singleLine="false"
                android:text="Beschreibung des Menus kann sehr lang sein und nerven"
                android:textColor="@color/unibe_gray_dark"
                android:textSize="13sp" />
            
            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="Preis"
                android:textColor="@color/unibe_gray_dark"
                android:textSize="13sp"
            />
        </LinearLayout>
    </TableRow>
</TableLayout>